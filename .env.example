# =====================================================
# ENGLISH ARCADE - ENVIRONMENT VARIABLES
# =====================================================
# Copy this file to .env and fill in your values
# =====================================================

# =====================================================
# SUPABASE CONFIGURATION
# =====================================================

# Supabase Project URL (required)
# Get this from your Supabase project dashboard
VITE_SUPABASE_URL=https://your-project-id.supabase.co

# Supabase Anonymous Key (required)
# Get this from your Supabase project dashboard
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Supabase Service Role Key (optional - for development only)
# WARNING: Never expose this in client-side code in production
# Only use for server-side operations or development
VITE_SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =====================================================
# APPLICATION CONFIGURATION
# =====================================================

# Application Name
VITE_APP_NAME=English Arcade

# Application Version
VITE_APP_VERSION=1.0.0

# Application Environment
# Options: development, staging, production
NODE_ENV=development

# =====================================================
# FEATURE FLAGS
# =====================================================

# Enable Analytics (true/false)
VITE_ENABLE_ANALYTICS=false

# Enable Debug Mode (true/false)
# Shows additional logging and debug information
VITE_ENABLE_DEBUG_MODE=false

# Enable Error Tracking (true/false)
VITE_ENABLE_ERROR_TRACKING=false

# Enable Performance Monitoring (true/false)
VITE_ENABLE_PERFORMANCE_MONITORING=false

# =====================================================
# API CONFIGURATION
# =====================================================

# API Timeout (milliseconds)
VITE_API_TIMEOUT=30000

# Maximum File Upload Size (bytes)
VITE_MAX_FILE_SIZE=10485760

# Rate Limiting
VITE_RATE_LIMIT_REQUESTS=100
VITE_RATE_LIMIT_WINDOW=900000

# =====================================================
# SECURITY CONFIGURATION
# =====================================================

# Session Timeout (milliseconds)
# Default: 1 hour (3600000ms)
VITE_SESSION_TIMEOUT=3600000

# Session Warning Time (milliseconds)
# Time before session expires to show warning
VITE_SESSION_WARNING_TIME=300000

# Enable HTTPS Only (true/false)
VITE_HTTPS_ONLY=false

# Content Security Policy
VITE_CSP_ENABLED=true

# =====================================================
# PERFORMANCE CONFIGURATION
# =====================================================

# Enable Code Splitting (true/false)
VITE_ENABLE_CODE_SPLITTING=true

# Enable Lazy Loading (true/false)
VITE_ENABLE_LAZY_LOADING=true

# Enable Service Worker (true/false)
VITE_ENABLE_SERVICE_WORKER=false

# Cache Duration (seconds)
VITE_CACHE_DURATION=3600

# =====================================================
# DEVELOPMENT CONFIGURATION
# =====================================================

# Development Server Port
VITE_DEV_PORT=5173

# Development Server Host
VITE_DEV_HOST=localhost

# Enable Hot Module Replacement (true/false)
VITE_HMR_ENABLED=true

# Enable Source Maps (true/false)
VITE_SOURCE_MAPS=false

# =====================================================
# DEPLOYMENT CONFIGURATION
# =====================================================

# Base URL for deployment
# Set this to your domain or GitHub Pages URL
VITE_BASE_URL=/

# CDN URL (optional)
# VITE_CDN_URL=https://your-cdn.com

# =====================================================
# THIRD-PARTY INTEGRATIONS
# =====================================================

# Google Analytics ID (optional)
# VITE_GA_ID=G-XXXXXXXXXX

# Sentry DSN (optional)
# VITE_SENTRY_DSN=https://your-sentry-dsn

# LogRocket ID (optional)
# VITE_LOGROCKET_ID=your-logrocket-id

# =====================================================
# LOCALIZATION
# =====================================================

# Default Language
VITE_DEFAULT_LANGUAGE=fa

# Supported Languages (comma-separated)
VITE_SUPPORTED_LANGUAGES=fa,en

# =====================================================
# GAME CONFIGURATION
# =====================================================

# Maximum Game Duration (seconds)
VITE_MAX_GAME_DURATION=3600

# Maximum Questions Per Game
VITE_MAX_QUESTIONS_PER_GAME=50

# Enable Game Analytics (true/false)
VITE_ENABLE_GAME_ANALYTICS=true

# =====================================================
# NOTIFICATION CONFIGURATION
# =====================================================

# Enable Push Notifications (true/false)
VITE_ENABLE_PUSH_NOTIFICATIONS=false

# Notification Duration (milliseconds)
VITE_NOTIFICATION_DURATION=5000

# =====================================================
# MONITORING CONFIGURATION
# =====================================================

# Enable Error Logging (true/false)
VITE_ENABLE_ERROR_LOGGING=true

# Enable Performance Logging (true/false)
VITE_ENABLE_PERFORMANCE_LOGGING=false

# Log Level
# Options: error, warn, info, debug
VITE_LOG_LEVEL=warn

# =====================================================
# EXAMPLE CONFIGURATION
# =====================================================

# Example for development:
# VITE_SUPABASE_URL=https://your-dev-project.supabase.co
# VITE_SUPABASE_ANON_KEY=your-dev-anon-key
# VITE_ENABLE_DEBUG_MODE=true
# VITE_LOG_LEVEL=debug

# Example for production:
# VITE_SUPABASE_URL=https://your-prod-project.supabase.co
# VITE_SUPABASE_ANON_KEY=your-prod-anon-key
# VITE_ENABLE_DEBUG_MODE=false
# VITE_LOG_LEVEL=error
# VITE_ENABLE_ANALYTICS=true

# =====================================================
# NOTES
# =====================================================

# 1. All VITE_* variables are exposed to the client
# 2. Never expose sensitive keys in client-side code
# 3. Use environment-specific files (.env.development, .env.production)
# 4. Keep this file updated with all available options
# 5. Document any new environment variables here

